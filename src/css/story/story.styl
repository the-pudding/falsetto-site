/* CUSTOM STORY STYLE */
#content
  height 100%
  .viz-wrapper
    display flex
    .viz

      margin-right 30px
      display flex
      width 200px
      justify-content center
      flex-wrap wrap
      .data-chooser
        display flex
        label
          display flex
      .line-chart-container
        svg
          display block
          .lines
            pointer-events none
            path
              fill none
              stroke black
          .voronoi
            opacity 0
            path
              fill black
              stroke black

      p, label
        font-size 12px
        cursor pointer
        font-family $atlas
        margin 0
        margin-right 10px
    .song-container
      display flex
      flex-wrap wrap
      flex-direction column
      height 100vh
      flex-grow 1
      .song-row
        position relative
        cursor pointer
        .song-overlay
          position absolute
          font-size 12px
          font-family $atlas
          margin 0
          background #e8e8e8
          top 0px
          display none
          z-index 1000
          width 300px
        .song-text
          font-size 14px
          font-family $atlas
          margin 0
          position relative
          z-index 100
      .numerator
        color red
      .missing
        opacity .6
        display none
      .filtered
        display none
        .song-text
          font-size 10px
          text-decoration line-through
