/* CUSTOM STORY STYLE */

.tooltip
  width 150px
  height auto
  border-top-left-radius 4px
  padding 10px
  position fixed
  background white
  bottom 0px
  right 0px
  margin 0 auto
  z-index 10000
  display none
  font-family $atlas
  .title
    font-size 12px
    margin 0
  .desc
    font-size 10px
    margin 0


body
  background #FF8A6E
  background #a4c098

#content
  height 100%
  .viz-wrapper
    display flex
    .viz
      margin-right 30px
      background #f8c784
      width 700px
      .data-chooser
        width 100%
        height 60px
        margin 0 auto
        padding-top 10px
        background #a0d3d6
        padding-bottom 10px
        display flex
        justify-content center
        .selectors-wrapper
          padding-top 34px

        .head
          font-size 16px
          font-weight 500
          color rgba(0,0,0,.8)
          margin 0 auto
          margin-right 10px
          margin-left 20px
          align-self center
        .line
          height 1px
          width 250px
          margin 0 auto
          background color rgba(0,0,0,.8)
          opacity .3
          margin-top 10px
          margin-bottom 10px
        .denominator
          display flex
          flex-wrap wrap
          width 100%
          align-self center
          margin 0 auto
          margin-top 8px
          justify-content flex-start
          label
            display flex
            color color rgba(0,0,0,.8)
            font-size 14px
            font-weight 400
            margin-bottom 5px
            -webkit-font-smoothing auto
            input
              margin-right 5px
      .line-chart-container, .scatter-plot
        .selector
          justify-content flex-start
          width 100%
          display flex
          padding-top 30px
          margin 0 auto
          margin-bottom 20px
          p
            font-size 14px
            font-weight 600
            color color rgba(0,0,0,.8)
            line-height 1.4
          form
            color color rgba(0,0,0,.8)
            font-family $atlas
            display flex
            font-size 12px
            font-weight 400
            -webkit-font-smoothing auto
            justify-content center
            width 100%
            p
              margin-right 10px
              &:last-of-type
                margin-left 10px
            input
              color color rgba(0,0,0,.8)
              font-family $atlas
              font-size 14px
              font-weight 400
              -webkit-font-smoothing auto
              margin-right 5px
        svg
          display block
          overflow visible
          .y
            text
              text-anchor end
              dominant-baseline central
              opacity .7
          .axis
            text
              font-size 15px
              font-weight 600
              fill black
              font-family $atlas
              opacity 1
            line
              stroke black
              shape-rendering crispEdges
              stroke-width 1px
              opacity .3
              stroke-dasharray 3,2
            .sub
              font-weight 400
              font-size 11px
          .circles
            fill #ff6522
            stroke #6b331a
            stroke-width 1px
          .lines
            pointer-events none
            path
              fill none
              stroke none
          .text-points-hover
            text-anchor middle
            font-family $atlas
            font-size 12px
            pointer-events none
            text
              pointer-events none
              dominant-baseline text-after-edge
              text-anchor middle
              display block
              opacity .7
              font-weight 600
          .text-points-hover-bg
            fill #f8c784
            stroke #f8c784
            stroke-width 5px
          .text-points, .text-points-bg
            text-anchor middle
            font-family $atlas
            font-size 16px
            font-weight 600
            pointer-events none
            fill rgba(51, 16, 16, 0.82)
            dominant-baseline middle
          .text-points-bg
            fill #f1886c
            stroke #f1886c
            stroke-width 5px
            display none
          .voronoi
            opacity 0
            cursor pointer
            path
              fill black
              stroke black
              cursor pointer
      .scatter-plot
        width 100%
        background #f1886c
        display none
        svg
          display block
          margin 0 auto
          margin-top 40px
          .axis
            text
              font-size 11px
              font-weight 600
              fill white
              font-family $atlas
              opacity 1

          .circles
            circle
              fill #ff6522
              stroke #6b331a
              stroke-width 1px
              display none
      p, label
        font-size 12px
        cursor pointer
        font-family $atlas
        margin 0
        margin-right 10px
    .song-container-wrapper
      flex-grow 1
      display flex
      flex-wrap wrap
      flex-direction row
      .top-row
        width 100%
        height 65px
        display flex
        .search
          font-family $atlas
          align-self center
          margin-left 20px
          margin-right 30px
          position relative
          .search-results
            position absolute
            padding 10px
            border-radius 3px
            display none
            top 100%
            transform translate(0,10px)
            background white
            width 200px
            height 300px
            z-index 100000000000
            overflow scroll

            .result
              margin-bottom 10px
              cursor pointer
              .result-title, .result-detail
                margin 0
                font-size 12px
              .result-detail
                font-size 10px
          input
            border none
            padding-left 5px
            padding-top 5px
            padding-bottom 5px
            border-radius 5px
            height 30px
            background #ab4f39
            background rgba(0, 0, 0, 0.13)
            color white
            font-weight 600
            font-size 14px
            line-height 2

            &::placeholder
              color white
              font-weight 600
              font-size 14px
              line-height 2
        .slider-wrapper
          display flex
          margin-left 20px
          p
            font-family $atlas
            font-size 16px
            color black
            margin 0
            pointer-events none
            align-self center
            margin-right 10px
        #slider-falsetto, #slider-register
          width 100px
          align-self center
        .noUi-target
          height 4px
          background black
          border black
          .noUi-base
            background #7b8874
          .noUi-origin
            .noUi-handle
              background #3d4738
              border-radius 50%
              width 18px
              box-shadow none
              border none
              height 18px
              top -8px
              user-select none
              outline none
              cursor pointer
              &:before, &:after
                display none
              .noUi-tooltip
                font-family $atlas
                font-size 13px
                width 20px
                color rgba(0,0,0,.8)
                font-weight 600
                background none
                border none
                margin-bottom -8px
                margin-left 0px


        .year-selected-container
          display flex
          .year-selected
            margin 0
            font-family $atlas
            font-size 36px
            color white
            padding 0 10px
          svg
            align-self center
            stroke white
            cursor pointer
        label
          display flex
          width 40%
          color white
          font-size 14px
          font-weight 400
          -webkit-font-smoothing auto
          font-family $atlas
          color black
          align-self center
          input
            margin-right 5px

    .song-container
      display flex
      flex-wrap wrap
      flex-direction column
      height calc(100vh - 65px)
      flex-grow 1
      .song-row
        position relative
        cursor pointer
        margin-right 30px
        span
          position relative
          display initial
          display none
          svg
            position absolute
            top 5px
            left 6px
            fill black
            stroke black
        .song-overlay
          display none



        .song-text
          font-size 12px
          font-family $atlas
          margin 0
          font-weight 600
          position relative
          z-index 100
          color rgba(255,255,255,.6)
          color #fbdfbf
      .numerator
        .song-text
          color white
          font-size 18px
          font-weight 600
          margin-right 10px
          color rgba(0, 0, 0, 0.74)
      .missing
        opacity 1
        display none

        &:before
          content 'x'
          position absolute
          color white
          font-family $atlas
          font-size 12px
          left -12px
          top -1px
      .filtered
        display none
        .song-text
          font-size 10px
          text-decoration line-through
          span
            display none
    .show-missing
      .missing
        display block
      .filtered
        display block
.year-selector
  position absolute
  right 0px
  top 0px
  background black
  width 90px
  z-index 10000
  height 80vh
  display flex
  flex-direction row
  flex-wrap wrap
  padding 10px
  justify-content space-between
  display none
  p, label
    font-size 12px
    line-height 1.5
    cursor pointer
    font-family $atlas
    margin 0
    color white
    position relative
    align-self space-between


.line-hover
  font-family $atlas
  font-size 12px
  display none
